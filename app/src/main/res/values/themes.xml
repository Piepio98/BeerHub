<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeerHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beery</item>
        <item name="colorPrimaryVariant">@color/beery</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_beery</item>
        <item name="colorSecondaryVariant">@color/dark_beery</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BeerHub.Bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_beery</item>
        <item name="colorPrimaryVariant">@color/dark_beery</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_beery</item>
        <item name="colorSecondaryVariant">@color/dark_beery</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.BeerHub.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/beery</item>
        <item name="cardElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="Theme.BeerHub.CardView_dark">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#FF8400</item>
        <item name="cardElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="CardView.add_review">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/beery</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="Material">
        <item name="colorPrimary">@color/beery</item>
        <item name="colorOnSurface">@color/dark_beery</item>
        <item name="colorError">@color/dark_beery</item>
    </style>

</resources>